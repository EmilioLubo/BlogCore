@model BlogCoreModels.Articulo

@{
    ViewData["Title"] = "Detalle de Artículo";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light d-flex justify-content-around flex-wrap align-items-center container">
            <div class="col-12 col-md-6">
                <h4 class="text-center text-primary">@Model.Nombre</h4>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <h4 class="text-muted">Fecha : @Model.FechaCreacion </h4>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block"/>
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>