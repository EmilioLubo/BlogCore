@model BlogCoreModels.Slider

@{
    ViewData["Title"] = "Editar Slider";
}

<h3 class="text-center mt-3">Editar Slider</h3>
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del Slider" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-1">
                <div class="col-3">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-1">
                <div class="col-3">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-9">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row justify-content-center my-3">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a la lista</a>
                </div>
            </div>
        </div>
        <div class="col-4 pt-5">
            <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}