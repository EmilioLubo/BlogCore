@model BlogCoreModels.ViewModels.HomeVM

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @{
            int cont = 0;
            string elClass;
        }
        @foreach (var el in Model.Slider)
        {

            @if(el.Estado == true)
            {
                elClass = cont++ == 0 ? "active" : "";
                <div class="carousel-item @elClass">
                    <img src="@Url.Content(el.UrlImagen)" class="d-block w-100" alt="@el.Nombre">
                    <h2 class="text-white text-center bg-warning py-1">@Html.Raw(el.Nombre)</h2>
                </div>
            }

        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>